{
  "name": "notes",
  "version": "1.0.0",
  "description": "Notes",
  "main": "server/index.js",
  "scripts": {
    "hooks": "cd .git/hooks && ln -sfv ../../hooks/pre-commit .",
    "client": "pm2 start server/client.js --name=\"client\" && pm2 logs client",
    "client:dev": "PORT=4002 node server/client.js",
    "server": "pm2 start server/index.js --name=\"server\" && pm2 logs server",
    "server:watch": "PORT=4012 nodemon --watch server --inspect",
    "js": "browserify -t envlocalify client/index.js -o public/index.js",
    "js:watch": "watchify -t envlocalify client/index.js -o public/index.js -dv",
    "copy": "sh bin/copy.sh",
    "build": "npm run copy && npm run js",
    "dev": "npm run build && npm run js:watch & npm run client:dev & npm run server:watch",
    "test": "tap test/**/*.js --cov",
    "lint": "happiness",
    "gh-pages": "npm run build && gh-pages -d public",
    "start": "npm run server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tnguyen14/notes.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tnguyen14/notes/issues"
  },
  "homepage": "https://github.com/tnguyen14/notes#readme",
  "dependencies": {
    "@tridnguyen/auth": "^2.4.0",
    "bluebird": "^3.4.1",
    "body-parser": "^1.15.2",
    "cookie-session": "^2.0.0-alpha.1",
    "cors": "^2.7.1",
    "dialog-polyfill": "^0.4.4",
    "dotenv-safe": "^2.3.1",
    "eventemitter3": "^2.0.2",
    "express": "^4.14.0",
    "flat-file-db": "^1.0.0",
    "forever": "^0.15.2",
    "googleapis": "^9.0.0",
    "hint.css": "^2.4.0",
    "js-yaml": "^3.6.1",
    "localforage": "^1.4.3",
    "lodash.pick": "^4.4.0",
    "markdown-it": "^7.0.0",
    "markdown-it-front-matter": "^0.1.2",
    "markdown-it-task-lists": "^1.2.2",
    "mkdirp": "^0.5.1",
    "moment": "^2.15.1",
    "navigo": "^3.0.0",
    "needle": "^1.1.2",
    "octicons": "^5.0.1",
    "passport": "^0.3.2",
    "pm2": "^2.0.18",
    "primer-markdown": "^3.3.1",
    "simple-fetch": "^1.2.1",
    "user-home": "^2.0.0"
  },
  "devDependencies": {
    "browserify": "^13.0.1",
    "debug": "^2.2.0",
    "envlocalify": "^1.1.1",
    "gh-pages": "^0.11.0",
    "happiness": "^7.1.2",
    "nodemon": "^1.10.2",
    "request": "^2.72.0",
    "rewire": "^2.5.2",
    "sinon": "^1.17.5",
    "sinon-as-promised": "^4.0.2",
    "tap": "^6.1.1",
    "watchify": "^3.7.0",
    "winston": "^2.2.0"
  }
}
